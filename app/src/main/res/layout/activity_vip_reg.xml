<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VipRegActivity">

    <Button
        android:id="@+id/btn_vip_nowreg"
        android:layout_width="160dp"
        android:layout_height="53dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:elevation="0dp"
        android:fadingEdge="none"
        android:text="现场登记"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/btn_vip_sacncode"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_vip_sacncode"
        android:layout_width="160dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:elevation="0dp"
        android:fadingEdge="none"
        android:text="扫码登记"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="手动登记"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_vip_sacncode" />

    <Button
        android:id="@+id/btn_vip_phonereg"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="提交"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/et_input_phone"
        app:layout_constraintTop_toTopOf="@+id/et_input_phone" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="338dp"
        android:layout_height="331dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_input_phone"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/img_btn_clear"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_marginStart="212dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/et_input_phone"
        app:layout_constraintTop_toTopOf="@+id/et_input_phone"
        app:srcCompat="@android:drawable/ic_delete" />

</android.support.constraint.ConstraintLayout>